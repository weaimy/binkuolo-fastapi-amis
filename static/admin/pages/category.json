{
  "type": "page",
  "title": "列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "actionType": "dialog",
      "label": "新增",
      "primary": true,
      "dialog": {
        "title": "新增栏目",
        "body": {
          "type": "form",
          "api": "post:/api/v1/admin/category",
          "body": [
            {
              "type": "input-text",
              "name": "title",
              "label": "栏目名称"
            },
            {
              "type": "tree-select",
              "name": "parent_id",
              "hideNodePathLabel": true,
              "label": "父级",
              "source": {
                "url": "/api/v1/admin/category/tree/select",
                "method": "get"
              }
            },
            {
              "label": "栏目类型",
              "type": "select",
              "name": "type",
              "value": 1,
              "options": [
                {
                  "label": "新闻模型",
                  "value": "1"
                },
                {
                  "label": "产品模型",
                  "value": "2"
                },
                {
                  "label": "招聘模型",
                  "value": "3"
                },
                {
                  "label": "单页",
                  "value": "4"
                },
                {
                  "label": "链接",
                  "value": "5"
                }
              ]
            },
            {
              "type": "input-text",
              "name": "seo_key",
              "label": "关键字"
            },
            {
              "type": "input-text",
              "name": "seo_desc",
              "label": "描述"
            },
            {
              "type": "input-number",
              "name": "sort",
              "label": "排序"
            },
            {
              "type": "switch",
              "name": "status",
              "onText": "开启",
              "offText": "关闭",
              "label": "状态"
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "service",
      "api": "get:/api/v1/admin/category",
      "body": [
        {
          "type": "table",
          "source": "$rows",
          "columns": [
            {
              "name": "id",
              "label": "ID",
              "width": 20,
              "sortable": true
            },
            {
              "name": "title",
              "label": "栏目名称",
              "sortable": true
            },
            {
              "name": "type",
              "label": "栏目类型",
              "sortable": false
            },
            {
              "name": "create_time",
              "type": "date",
              "label": "创建时间"
            },
            {
              "name": "user_status",
              "label": "状态",
              "quickEdit": {
                "mode": "inline",
                "type": "switch",
                "onText": "开启",
                "offText": "关闭",
                "saveImmediately": true
              }
            }
          ],
          "itemActions": [
          {
            "label": "编辑",
            "type": "button",
            "actionType": "dialog",
            "dialog": {
              "title": "编辑",
              "body": "这是个简单的编辑弹框"
            }
          },
          {
            "label": "删除",
            "type": "button",
            "actionType": "ajax",
            "confirmText": "确认要删除？",
            "api": "/amis/api/mock2/form/saveForm"
          }
        ]
        }
      ]
    }
  ]
}
