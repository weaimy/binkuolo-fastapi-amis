{
  "type": "page",
  "title": "列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "actionType": "dialog",
      "label": "新增",
      "primary": true,
      "dialog": {
        "title": "新增职位",
        "size": "lg",
        "body": {
          "type": "form",
          "api": "post:/api/v1/admin/job",
          "body": [
            {
              "type": "tabs",
              "tabs": [
                {
                  "title": "基本信息",
                  "body": [
                    {
                      "type": "input-text",
                      "name": "title",
                      "label": "职位名称"
                    },

                    {
                      "type": "tree-select",
                      "name": "category_id",
                      "hideNodePathLabel": true,
                      "label": "所属栏目",
                      "source": {
                        "url": "/api/v1/admin/category/tree/select",
                        "method": "get"
                      }
                    },
                    {
                      "type": "input-text",
                      "name": "work_address",
                      "label": "工作地点"
                    },
                    {
                      "type": "input-text",
                      "name": "work_nature",
                      "label": "工作性质"
                    },
                    {
                      "type": "input-text",
                      "name": "work_education",
                      "label": "学历要求"
                    },
                    {
                      "type": "input-text",
                      "name": "work_money",
                      "label": "薪资待遇"
                    },
                    {
                      "type": "input-text",
                      "name": "work_age",
                      "label": "工作年限"
                    },
                    {
                      "type": "input-text",
                      "name": "work_num",
                      "label": "招聘人数"
                    },
                    {
                      "type": "input-rich-text",
                      "name": "content",
                      "label": "工作内容"
                    },
                    {
                      "type": "switch",
                      "name": "status",
                      "onText": "开启",
                      "offText": "关闭",
                      "label": "状态"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "api": "/api/v1/admin/job",
      "quickSaveItemApi": "put:/api/v1/admin/role",
      "syncLocation": false,
      "columns": [
        {
          "name": "id",
          "label": "ID",
          "width": 20,
          "sortable": false
        },
        {
          "name": "title",
          "label": "职位名称",
          "sortable": false
        },
        {
          "name": "category_title",
          "label": "所属栏目",
          "sortable": false
        },
        {
          "name": "create_time",
          "type": "date",
          "label": "创建时间",
          "sortable": false
        },
        {
          "name": "status",
          "label": "状态",
          "quickEdit": {
            "mode": "inline",
            "type": "switch",
            "onText": "开启",
            "offText": "关闭",
            "saveImmediately": false
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "buttons": [
            {
              "label": "修改",
              "type": "button",
              "actionType": "dialog",
              "level": "primary",
              "dialog": {
                "title": "职位修改",
                "size": "lg",
                "body": {
                  "type": "form",
                  "api": "put:/api/v1/admin/job",
                  "body": [
                    {
                      "type": "hidden",
                      "name": "id"
                    },
                    {
                      "type": "tabs",
                      "tabs": [
                        {
                          "title": "基本信息",
                          "body": [
                            {
                              "type": "input-text",
                              "name": "title",
                              "label": "标题"
                            },
                            {
                              "type": "tree-select",
                              "name": "category_id",
                              "hideNodePathLabel": true,
                              "label": "所属栏目",
                              "source": {
                                "url": "/api/v1/admin/category/tree/select",
                                "method": "get"
                              }
                            },
                            {
                              "type": "input-rich-text",
                              "name": "content",
                              "label": "正文内容"
                            },
                            {
                              "type": "input-image",
                              "name": "img",
                              "label": "缩略图",
                              "receiver": "post:/api/v1/admin/upload"
                            }
                          ]
                        },
                        {
                          "title": "其它设置",
                          "body": [
                            {
                              "type": "input-text",
                              "name": "seo_key",
                              "label": "关键字"
                            },
                            {
                              "type": "input-text",
                              "name": "seo_desc",
                              "label": "描述"
                            },
                            {
                              "type": "switch",
                              "name": "status",
                              "onText": "开启",
                              "offText": "关闭",
                              "label": "状态"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "label": "删除",
              "level": "danger",
              "actionType": "dialog",
              "dialog": {
                "title": "操作提示",
                "body": "确定要放入回收站？"
              }
            }
          ]
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
